{
  "name": "avansaber/php-linkedin-api",
  "description": "Modern, fluent, framework-agnostic PHP client for the LinkedIn API (Marketing Developer Platform)",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "linkedin",
    "api",
    "marketing",
    "ads",
    "rest",
    "psr-18",
    "psr-7"
  ],
  "homepage": "https://github.com/avansaber/php-linkedin-api",
  "authors": [
    {
      "name": "Avansaber",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^8.1",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "nyholm/psr7": "^1.8"
  },
  "autoload": {
    "psr-4": {
      "Avansaber\\LinkedInApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Avansaber\\LinkedInApi\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit --testdox"
  }
}
